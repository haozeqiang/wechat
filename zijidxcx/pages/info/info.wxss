/* pages/info/info.wxss */
.infotop{
  position: relative;
}
.allinfo{
  padding: 20rpx 100rpx 20rpx 20rpx;
}
.ope{
  position: fixed;
  right: 0;
  top: 0;
  padding-top: 10rpx;
  display: flex;
  justify-content: center;
}
.ope text{
  margin-right: 20rpx;
  padding: 10rpx;
  height: 100%;
  color: rgb(0, 0, 0);
  background-color: rgba(0,0,0,.3);
  border-radius: 50%;
}
.infot{
  font-size: 16px;
}
.infot text{
  line-height: 50rpx;
}
.inprice{
  padding-top: 0rpx;
}
.frs{
  font-size: 14px;
  opacity: .9
}
.fr{
  margin-right: 80rpx;
}
.details{
  background: #ddd;
}
@font-face {
  font-family: 'iconfont';  /* project id 934609 */
  src: url('http://at.alicdn.com/t/font_934609_n9n8ku17v6n.eot');
  src: url('http://at.alicdn.com/t/font_934609_n9n8ku17v6n.eot?#iefix') format('embedded-opentype'),
  url('http://at.alicdn.com/t/font_934609_n9n8ku17v6n.woff') format('woff'),
  url('http://at.alicdn.com/t/font_934609_n9n8ku17v6n.ttf') format('truetype'),
  url('http://at.alicdn.com/t/font_934609_n9n8ku17v6n.svg#iconfont') format('svg');
}
.details{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0rpx;
  box-sizing: border-box;
}
.fontinfo{
  font-size: 14px;
}
.details text{
  opacity: .5;
  margin-right: 10rpx;
}
.introduce{
  padding: 10rpx;
}
.divider{
  font-size: 14px;
  padding: 10rpx 0;
}
.tank image{
  height: 100%;
}
.img image{
  width: 100%;
}
.img{
  text-align: center;
  padding-bottom: 100rpx;
}
.bott{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  background: #fff;
}
.shopcart,.customer{
  width: 15%;
  box-sizing: border-box;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.shopcart{
  border-right: 1rpx solid #f1f1f1;
}
.addcart,.buy{
  display: flex;
  width: 35%;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #fff;
}
.bott .iconfont{
  font-size: 20px;
}
.addcart{
  background: rgba(255,165,0,.8);
}
.buy{
  background: rgba(255,69,0,.8);
}

.close{
  position: relative;
  width: 20rpx;
  height: 20rpx;
}
.tantitle{
  width: 90%;
}