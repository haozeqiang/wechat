/* pages/cs/cs.wxss *//*使屏幕变暗 */
.commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
/*对话框 */
.commodity_attr_box {
 height: 800rpx;
 width: 100%;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 background: #fff;
}

/* 自己增加的 */
.tank{
  padding: 20rpx 20rpx;
  height: 200rpx;
  display: flex;
}
.tank .img{
  width: 200rpx;
  height: 230rpx;
  position: relative;
  bottom: 70rpx;
}
.columl{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  padding-left: 15rpx;
}
.columl text{
  line-height: 50rpx;
}
.tantitle text{
  color: rgba(255, 0, 0, 0.7);
}
.close{
  border: 1rpx solid black;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  padding:15rpx;
  font-size:15px;
  line-height:.8;
  border-radius: 50%;
}
.cont{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 35rpx;
}
.cont text{
  font-size: 14px;
  border: 1rpx solid red;
}
.bottom{
  width: 100%;
  height: 100rpx;
  background-color: rgba(255,69,0,.7);
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
}