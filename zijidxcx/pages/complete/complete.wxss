
/* 九宫格样式 */
.index-nav,.nav-item{
  display: flex;
  flex-wrap: wrap;
}

.nav-item{
  width: 25%;
  height: 200rpx;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.nav-item image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.itemNmae{
  font-size: 15px;
}

/* 点击弹窗 */
.commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
/*对话框 */
.commodity_attr_box {
 height: 800rpx;
 width: 100%;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 background: #fff;
}

/* 自己增加的 */
.tank{
  padding: 20rpx 20rpx;
  height: 200rpx;
  display: flex;
}
.tank .img{
  width: 200rpx;
  height: 230rpx;
  position: relative;
  bottom: 70rpx;
}
.columl{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  padding-left: 15rpx;
}
.columl text{
  line-height: 50rpx;
}
.tantitle text{
  color: rgba(255, 0, 0, 0.7);
}
.close{
  border: 1rpx solid black;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  padding:15rpx;
  font-size:15px;
  line-height:.8;
  border-radius: 50%;
}
.cont{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 35rpx;
  position: relative;
}
.cont text{
  font-size: 14px;
}
.bottom{
  width: 100%;
  height: 100rpx;
  background-color: rgba(255,69,0,.7);
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
}

.procount{
  font-size: 15px;
  height: 55rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  overflow: hidden;
}
.procount text{
  padding: 10rpx;
  background: #ddd;
  margin-right:5rpx; 
}
.content text{
  line-height: 2rem;
}
.procount .count{
  padding: 10rpx 30rpx;
}
.procount .ofadd{
  padding: 10rpx 24rpx;
}
.procount .add{
  padding: 10rpx 20rpx;
}