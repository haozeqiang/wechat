/* pages/home/home.wxss */

/* 搜索框开始 */
.divider{
  background: #f1f1f1;
  padding: 15rpx 30rpx 30rpx;
}
.search{
  width: 80%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  background: #fff;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  font-size: 15px;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}
.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}
 
.sousuo {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 20%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  background: #d0d0d0;
  font-size: 14px;
}
.page_row{
  display: flex;
  flex-direction: row
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:50rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
/* 搜索框结束 */


/* 九宫格开始 */
.index-nav{
  border-bottom: 1rpx solid #ddd;
}
.index-nav,.nav-item{
  display: flex;
  flex-wrap: wrap;
}

.nav-item{
  width: 25%;
  height: 200rpx;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.nav-item image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.nav-item text{
  font-size: 15px;
}
/* 九宫格结束 */
/* 热卖推荐开始 */
.hot{
  display: flex;
  border-bottom: 1rpx solid #ddd; 
  justify-content: space-evenly;
  padding: 30rpx 0;
  font-size: 15px;
  align-items: center;
}
.hot image{
  width: 50rpx;
  height: 50rpx;
}
/* 热卖推荐结束 */
/* 循环展示商品 */
.product{
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items:space-between;
  flex-wrap: wrap;
}
.product-item{
  width: 50%;
  position: relative;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
}

.product-item image{
  display: block;
  width: 100%;
  height: 350rpx;
}

.sales{
  color: rgba(161, 159, 159, 0.945);
  font-size: 13px;
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
}
.sales::after{
  content: '';
  display: block;
  clear: both;
}
/* 循环展示商品结束 */
