<!--pages/product/product.wxml-->
<view class='prolist'>
  <view class='pleft'>
    <text class="{{ idx == item.pid ? 'prop':''}}" wx:for="{{prop}}" wx:key="{{item.pid}}" catchtap='toprolist' data-pid="{{item.pid}}">{{item.proptit}}</text>
  </view>
  <view class='proinfo'>
    <view class='info' wx:for="{{prolist}}" wx:key="{{item.id}}">
      <view class='titi'><image src='{{item.pic}}' mode='aspectFill' lazy-load></image></view>
      <view class='titp'>
        <view class='tittop'>
          <text class='ptitle'>这个改标这是个哦啊还是后</text>
        </view>
        <view class='titbot'>
          <text class='price'>158.66</text>
        </view>
      </view>
    </view>
  </view>
</view>
